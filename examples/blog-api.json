{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Blog Post API",
  "description": "A complete blog post schema with author, categories, tags, and metadata",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique post identifier"
    },
    "title": {
      "type": "string",
      "minLength": 5,
      "maxLength": 200,
      "description": "Post title"
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "URL-friendly slug"
    },
    "excerpt": {
      "type": "string",
      "maxLength": 500,
      "description": "Short post summary"
    },
    "content": {
      "type": "string",
      "minLength": 50,
      "description": "Full post content in markdown"
    },
    "author": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string",
          "minLength": 2
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "avatar": {
          "type": "string",
          "format": "uri"
        },
        "bio": {
          "type": "string",
          "maxLength": 300
        }
      },
      "required": ["id", "name", "email"]
    },
    "category": {
      "type": "string",
      "enum": ["Technology", "Design", "Business", "Lifestyle", "Tutorial", "News"],
      "description": "Primary category"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 2
      },
      "minItems": 1,
      "maxItems": 10,
      "description": "Post tags"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "published", "archived"],
      "description": "Publication status"
    },
    "featured": {
      "type": "boolean",
      "description": "Is this a featured post?"
    },
    "coverImage": {
      "type": "string",
      "format": "uri",
      "description": "Featured image URL"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "readingTime": {
          "type": "integer",
          "minimum": 1,
          "maximum": 60,
          "description": "Estimated reading time in minutes"
        },
        "views": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of views"
        },
        "likes": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of likes"
        }
      }
    },
    "publishedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Publication timestamp"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    },
    "comments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "author": {
            "type": "string"
          },
          "content": {
            "type": "string",
            "minLength": 1
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["id", "author", "content"]
      },
      "minItems": 0,
      "maxItems": 5
    }
  },
  "required": ["id", "title", "slug", "content", "author", "category", "status", "publishedAt"]
}
