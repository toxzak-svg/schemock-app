{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User API",
  "type": "object",
  "properties": {
    "users": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "name": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "role": { "type": "string", "enum": ["admin", "user", "guest"] }
        },
        "required": ["id", "name", "email"]
      }
    }
  }
}
